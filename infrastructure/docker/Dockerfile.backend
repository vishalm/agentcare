# AgentCare Backend Service Dockerfile
# Multi-Agent Healthcare Scheduling API

# Build stage
FROM node:18-alpine AS build
LABEL maintainer="AgentCare Team <dev@agentcare.com>"
LABEL description="AgentCare Backend API Service"
LABEL version="3.0.0"

# Install system dependencies
RUN apk add --no-cache \
    curl \
    dumb-init \
    postgresql-client \
    && rm -rf /var/cache/apk/*

# Set working directory
WORKDIR /app

# Copy root package.json and backend package.json
COPY package*.json ./
COPY backend/package*.json ./backend/

# Install dependencies
RUN npm ci --only=production --no-audit --no-fund
RUN cd backend && npm ci --only=production --no-audit --no-fund

# Copy backend source code
COPY backend/ ./backend/

# Copy necessary shared files
COPY database/ ./database/
COPY scripts/ ./scripts/
COPY env.example ./

# Build the backend application
WORKDIR /app/backend
RUN npm run build

# Production stage
FROM node:18-alpine AS production
ENV NODE_ENV=production
ENV PORT=3000

# Install runtime dependencies
RUN apk add --no-cache \
    curl \
    dumb-init \
    postgresql-client \
    tini \
    && rm -rf /var/cache/apk/*

# Create non-root user
RUN addgroup -g 1001 -S agentcare && \
    adduser -S agentcare -u 1001 -G agentcare

# Set working directory
WORKDIR /app

# Copy production dependencies from build stage
COPY --from=build /app/backend/node_modules ./backend/node_modules
COPY --from=build /app/node_modules ./node_modules

# Copy built application
COPY --from=build /app/backend/dist ./backend/dist
COPY --from=build /app/backend/package*.json ./backend/

# Copy runtime files
COPY --from=build /app/database ./database
COPY --from=build /app/scripts ./scripts
COPY --from=build /app/package*.json ./

# Create required directories and set permissions
RUN mkdir -p /app/logs /app/tmp && \
    chown -R agentcare:agentcare /app && \
    chmod -R 755 /app

# Switch to non-root user
USER agentcare

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Expose application port
EXPOSE ${PORT}

# Use tini as init system for proper signal handling
ENTRYPOINT ["tini", "--"]

# Start the backend service
CMD ["node", "backend/dist/index.js"]

# Development stage (for development builds)
FROM node:18-alpine AS development
ENV NODE_ENV=development

RUN apk add --no-cache \
    curl \
    dumb-init \
    postgresql-client \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY backend/package*.json ./backend/

# Install all dependencies (including dev)
RUN npm ci --include=dev
RUN cd backend && npm ci --include=dev

# Copy source code
COPY backend/ ./backend/
COPY database/ ./database/
COPY scripts/ ./scripts/
COPY env.example ./

# Create directories
RUN mkdir -p /app/logs && chmod 755 /app/logs

# Expose development ports
EXPOSE 3000 9090

ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev:backend"] 