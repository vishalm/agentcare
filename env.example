# AgentCare Environment Configuration

# Application Settings
NODE_ENV=development
API_PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/agentcare
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=agentcare
DATABASE_USER=agentcare_user
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=false

# Redis Configuration (for session storage and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
CORS_ORIGIN=http://localhost:3000
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-key
PASSWORD_SALT_ROUNDS=12

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:latest
OLLAMA_TIMEOUT=30000
OLLAMA_MAX_TOKENS=1000
OLLAMA_TEMPERATURE=0.7

# RAG Configuration
RAG_VECTOR_DIMENSION=384
RAG_SIMILARITY_THRESHOLD=0.3
RAG_MAX_CONTEXT_LENGTH=2000
RAG_CLEANUP_DAYS=30

# Email Service Configuration
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@agentcare.com

# SMS Service Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# External Services
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret
MICROSOFT_GRAPH_CLIENT_ID=your_microsoft_graph_client_id
MICROSOFT_GRAPH_CLIENT_SECRET=your_microsoft_graph_client_secret

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ENABLED=false
METRICS_PORT=9090

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_CALENDAR_SYNC=false
ENABLE_EMAIL_REMINDERS=true
ENABLE_USER_REGISTRATION=true
ENABLE_GUEST_BOOKING=true
ENABLE_RAG_SYSTEM=true
ENABLE_OLLAMA_LLM=true

# Development Tools
DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_PLAYGROUND=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=agentcare-backups

# Healthcare Compliance
HIPAA_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555
DATA_ENCRYPTION_KEY=your-32-char-encryption-key-here
PATIENT_DATA_RETENTION_YEARS=7 